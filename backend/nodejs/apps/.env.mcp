# MCP Integration Configuration for Backend
# Add these environment variables to your backend .env file

# MCP Service URL
# IMPORTANT: MCP service on AWS EC2
# It handles OAuth and integrations via Composio
# For local development: http://localhost:8001 (if running MCP service locally)
# For production: https://mcp.openanalyst.com (default)
MCP_SERVICE_URL=https://mcp.openanalyst.com

# MCP/Agent API Key
# REQUIRED: The MCP service requires an X-API-Key header for authentication
AGENT_API_KEY=vishal_agent_api_key

# Enable MCP Integration
# Set to true to enable MCP features in ChatBot
ENABLE_MCP_INTEGRATION=true

# MCP Debug Mode
# Set to true for verbose logging
MCP_DEBUG=false

# CORS Configuration
# Make sure your frontend origin is included in ALLOWED_ORIGINS
# Example: ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
