# MCP Integration Configuration
# Copy this file to .env.local and update with your actual values

# Backend API URL
# The frontend will call PipesHub backend, which proxies MCP integration requests
# For local development: http://localhost:3000 (or your backend port)
# For production: https://your-backend-domain.com
VITE_BACKEND_URL=http://localhost:3000

# OAuth Redirect Configuration (optional)
# Update this to match your deployment URL
# If not specified, window.location.origin will be used
VITE_OAUTH_REDIRECT_BASE=http://localhost:3000

# Enable MCP debugging (set to false in production)
VITE_MCP_DEBUG=false

# Note: MCP service URL is configured in the backend
# The MCP service at https://mcp.openanalyst.com is publicly accessible
# No API keys are required - users authenticate directly via OAuth/Composio
